@model TechnicalExercise.Models.CandidateModel

@{
    ViewBag.Title = "Register";
}

<div class="container">

    <h2>Register</h2>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { id = "candidateform" }))
                {

                    
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(model => model.FirstName, "First Name")
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.LastName, "Last Name")
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PositionList, "Position")
                        @Html.DropDownListFor(model => model.PositionList, Model.PositionList)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.JoinDate, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.JoinDate, "{0:MM/dd/yyyy}", new { @class = "form-control datepicker" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SalaryRange)
                        @Html.TextBoxFor(model => model.SalaryRange, new { @class = "form-control", @type = "number" })
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.ApplyToOtherJobs, "Are you Applying to Other Jobs?")
                            </div>
                            <div class="col-sm-9" >
                                @Html.CheckBoxFor(model => model.ApplyToOtherJobs, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <input type="submit" class="btn btn-primary " value="Submit" />

                }
            </div>
        </div>
    </div>

</div>

@section scripts{
    <script type="text/javascript">
        $('.datepicker').datepicker({

        });
    </script>
}


